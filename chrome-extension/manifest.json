{
	"manifest_version": 3,
	"name": "GPT Chat Nav Pro",
	"version": "1.0",
	"permissions": ["activeTab", "storage", "tabs", "contextMenus", "webNavigation", "unlimitedStorage"],
	"icons": {
		"16": "chrome_icon.png",
		"32": "chrome_icon.png",
		"48": "chrome_icon.png",
		"128": "chrome_icon.png"
	},
	"background": {
		"service_worker": "background.js",
		"type": "module"
	},
	"content_scripts": [
		{
			"matches": ["https://chatgpt.com/*"],
			"js": ["content.js"],
			"css": ["style/toast.css"]

		}
	],

	"action": {
		"default_icon": {
			"16": "chrome_icon.png",
			"32": "chrome_icon.png",
			"48": "chrome_icon.png",
			"128": "chrome_icon.png"
		}
	},

	"web_accessible_resources": [
		{
			"resources": ["assets/*"],
			"matches": ["https://chatgpt.com/*"]
		}
	]
}
